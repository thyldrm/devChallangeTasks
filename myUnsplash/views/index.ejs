<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script
      src="https://kit.fontawesome.com/d1531cc4ce.js"
      crossorigin="anonymous"
    ></script>
    <script src="https://unpkg.com/scrollreveal"></script>
    <title>Document</title>
    <link href="/css/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">
      <div class="headline load-hidden">
        <i class="fas fa-angry"></i>
        <input type="text" placeholder="Search..">
        <button href="#myModal" data-toggle="modal" id="addPhoto" type="button">Add</button>
      </div>
        <div id="myModal" class="modal fade">
            <!-- Modal content -->
            <div class="modal-content">
              <p>Add a new Photo</p>
              <form method="POST" action="/photos" class="tm-contact-form" id="form" encType="multipart/form-data">
                <label for="fname">Label</label><br>
                <input type="file" name="image" id="img" class="file"><br><br>
                <label for="lname">Photo Url</label><br>
                <input type="text" id="lname" name="lname"><br><br>
                <input type="submit" value="Submit">
                <span data-dismiss="modal"  class="close">Cancel</span>
              </form>
            </div>
          </div>
    </div>
    
   

      <div class="row widget-list"> 
        <% for(let i=0;i<photos.length;i++) { %>
        <div class="column headline widget">
          <img src="<%= photos[i].image %>" style="width:100%" class="image">
          <div class="middle">
            <a id="deletePhoto" data-toggle="modal" href="#modal<%= photos[i]._id%>" class="text deletePhoto">delete</a>
            <div class="text2">lorem  asdasdasd</div>
          </div>
        </div>
        <% } %>
      </div>

      

      

      
<% for(let i=0;i<photos.length;i++) { %>
  <div class="modal fade" id="modal<%= photos[i]._id%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <p>delete</p>
          <form>
            <label for="lname">password</label><br>
            <input class="password" type="text" value=""><br><br>
            <a href="/<%= photos[i]._id %>?_method=DELETE" type="submit">delete</a>
            <span  class="close1" data-dismiss="modal">Cancel</span>
          </form>
        </div>
      </div>
    </div>
  </div>
<% } %>
       
    <div class="result"></div>

    
      <script>
      
    ScrollReveal().reveal('.headline', { duration: 2000 });
    ScrollReveal().reveal('.widget', { interval: 200 });

      </script>
       

    
</body>
</html>

